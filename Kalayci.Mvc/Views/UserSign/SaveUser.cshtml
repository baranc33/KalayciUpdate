@model UserSaveDto
@{
    ViewData["Title"] = "SaveUser";
     Layout = null;
}

    @await Html.PartialAsync("_LayoutCssPartial")
@await Html.PartialAsync("_LayoutjsPartial");

    @await Html.PartialAsync("_ValidationScriptsPartial")

<style>
    .gradient-custom  {
        /* fallback for old browsers */
        background: #016CA9;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to bottom right, rgba(28, 174, 192, 1), rgba(56, 107, 192, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to bottom right, rgba(28, 174, 192, 1), rgba(56, 107, 192, 1))
    }

    .card-registration .select-input.form-control[readonly]:not([disabled]) {
        font-size: 1rem;
        line-height: 2.15;
        padding-left: .75em;
        padding-right: .75em;
    }

    .card-registration .select-arrow {
        top: 13px;
    }
</style>



<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Kullanıcı Kayıt Formu </h3>


                        @if (TempData["ErrorMessage"]!=null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @TempData["ErrorMessage"]
                            </div>
                        }

                        <form asp-controller="UserSign" asp-action="SaveUser" asp-route-returnUrl="@Context.Request.Query["returnURl"]" method="post">

                            <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
                            </div>
                            <div class="row">
                                <div class="col-md-5 mb-4">

                                    <div data-mdb-input-init class="form-outline">
                                        <label asp-for="UserName" class="form-label" for="firstName"></label>
                                        <input asp-for="UserName" type="text" id="firstName" class="form-control form-control-lg" />
                                        <span class="text-danger" asp-validation-for="UserName"></span>
                                    </div>

                                </div>
                                <div class="col-md-7 mb-4">
                                    <div data-mdb-input-init class="form-outline">
                                        <label asp-for="Email" class="form-label" for="firstName"></label>
                                        <input asp-for="Email" type="email" id="firstName" class="form-control form-control-lg" />
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>
                                </div>


                                <div class="col-md-6 mb-4">
                                    <div data-mdb-input-init class="form-outline">
                                        <label asp-for="Password" class="form-label" for="firstName"></label>
                                        <input asp-for="Password" type="password" id="firstName" class="form-control form-control-lg" />
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4 d-flex align-items-center">
                                    <div data-mdb-input-init class="form-outline">
                                        <label asp-for="PasswordConfirm" class="form-label" for="firstName"></label>
                                        <input asp-for="PasswordConfirm" type="password" id="firstName" class="form-control form-control-lg" />
                                        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                                    </div>

                                </div>

                            </div>

                             <div class="row">
                                <div class="col-md-6 mb-4 pb-2">
                                    <div data-mdb-input-init class="form-outline">
                                        <label asp-for="Phone" class="form-label" for="firstName"></label>
                                        <input asp-for="Phone" type="text" id="firstName" class="form-control form-control-lg" />
                                        <span class="text-danger" asp-validation-for="Phone"></span>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4 d-flex align-items-center">
                                    <div data-mdb-input-init class="form-outline">
                                        <label asp-for="SignInPassword" class="form-label" for="firstName"></label>
                                        <input asp-for="SignInPassword" type="password" id="firstName" class="form-control form-control-lg" />
                                        <span class="text-danger" asp-validation-for="SignInPassword"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <label class="form-label select-label">Branşı</label>
                                    <select class="form-select" aria-label="Default select example">
                                        <option selected>Open this select menu</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>

                                </div>
                            </div>
                            <div class="row">

                                <div class="col-md-6 mb-4">

                                    <h6 class="mb-2 pb-1">Cinsiyet: </h6>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="femaleGender"
                                               value="option1" checked />
                                        <label class="form-check-label" for="femaleGender">Female</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="maleGender"
                                               value="option2" />
                                        <label class="form-check-label" for="maleGender">Male</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="otherGender"
                                               value="option3" />
                                        <label class="form-check-label" for="otherGender">Other</label>
                                    </div>

                                </div>
                            </div>


                            <div class="mt-4 pt-2">
                                <button data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit"  value="Submit" >
                                    Kaydet
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

