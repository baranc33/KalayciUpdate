@model ICollection<Personel>
@{
    ViewData["Title"] = "ListBranchPersonel";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid px-4">
    <h1 class="mt-4"> @TempData["BranchName"] Personel Listesi</h1>

    <div class="card mb-4">
        <div class="card-body row justify-content-between">
            <div class="col-7">
                Bu Sayfada Personeller ile ilgili işlemler Yapılmaktadır
            </div>
            <div class="col-2 offset-1">
                <a asp-area="Admin" asp-controller="Personel" asp-action="AddPersonel" class="btn btn-primary"> Personel Ekle</a>
            </div>
        </div>


    </div>



    @if (Model.Count>0)
    {


        <div class="card mb-4">
            <div class="card-header d-flex ">
                <div class="">
                    <img src="~/img/MPSIcon.png" alt="..." />
                </div>

            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            @* <th>İş Yeri</th> *@
                            @*          <th>Scil No</th>*@
                            <th>TC Kimlik </th> 
                            <th>Adı</th>
                            <th>Soy Adı</th>
                            <th>Telefon</th>
                            <th>Cinsiyet</th>
                            <th>İşe Giriş Tarihi</th>
                            <th>Şefi</th>
                            @*<th>Genel</th>
                            <th>Sağlık</th>
                            <th>Eğitimi Veren 1</th>
                            <th>Eğitimi Veren 2</th> 
                            <th>Genel Puan</th> *@
                            @* <th>Teknik Puan</th> *@

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.TcNumber</td>
                                <td>@item.Name</td>
                                <td>@item.LastName</td>
                                <td>@item.Phone</td>
                                @if (item.Gender==true)
                                {
                                    <td>Bay</td>
                                }
                                else
                                {
                                    <td>Bayan</td>
                                }

                                <td>@item.WorkStartDate.ToString("d")</td>
                                @if (item.ManagerUserId==null)
                                {
                                    <td >
                                        <p style="color:red;">
                                            Şef Atanmamıştır.
                                        </p>
                                    </td>
                                }
                                else
                                {
                                    <td>@item.ManagerUser.personel.Name @item.ManagerUser.personel.LastName</td>

                                }
                           
                            </tr>
                        }


                    </tbody>

                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Office</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>


    }
    else
    {
        <div class="alert alert-danger">
            <h2>
                Henüz bir Tersane Eklenmemiştir
            </h2>
        </div>
    }

</div>
