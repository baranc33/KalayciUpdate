@model ICollection<PersonelProject>

@{
    ViewData["Title"] = "ProjectPersonelList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}




<div class="container-fluid px-4">
    <h1 class="mt-4">    @TempData["ProjectName"]</h1>

    <div class="card mb-4">
        <div class="card-body row justify-content-between">
            <div class="col-7">
              

                @if (TempData["Message"] != null)
                {
                    <div class="alert " id="MessageBox" role="alert">
                        <p> @TempData["Message"] </p>
                    </div>
                }
            </div>
         @*    <div class="col-2 offset-1">
                <a asp-area="Admin" asp-controller="Personel" asp-action="AddPersonel" class="btn btn-primary"> Personel Ekle</a>
            </div> *@
        </div>


    </div>



    @if (Model.Count>0)
    {


        <div class="card mb-4">
            <div class="card-header d-flex ">
                <div class="">
                    <img src="~/img/MPSIcon.png" alt="..." />
                </div>

            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                       
                            <th>Adı</th>
                            <th>Soy Adı</th>
                            <th>İşi</th>
                            <th>Telefon</th>
                     
                            <th>Projeye Giriş Tarihi</th>
                          
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Personel.Name</td>
                                <td>@item.Personel.LastName</td>
                                <td>@item.Branch.BranchName</td>
                                <td>@item.Personel.Phone</td>

                                <td>@item.StartDate.ToString("d")</td>

                                <td>
                                    <a class="btn btn-primary"  >Detay</a>
                                </td>
                                <td>
                                    <a class="btn btn-danger" >Çıkış ver</a>

                                </td>
                            </tr>
                        }


                    </tbody>

                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Office</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>


    }
    else
    {
        <div class="alert alert-danger">
            <h2>
                Henüz bir Personel Eklenmemiştir
            </h2>
        </div>
    }

</div>




<script>

        var messageBoxColor='@TempData["MessageColor"]';
        console.log(messageBoxColor);
         var d=document.getElementById("MessageBox");
    d.classList.add(messageBoxColor);
</script>