@model ICollection<Personel>
@{
    ViewData["Title"] = "Admin Personel Service";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}



<div class="container-fluid px-4">
    <h1 class="mt-4">Personel Listesi</h1>

    <div class="card mb-4">
        <div class="card-body row justify-content-between">
            <div class="col-7">


                @if (TempData["Message"] != null)
                {
                    <div class="alert " id="MessageBox" role="alert">
                        <p> @TempData["Message"] </p>
                    </div>
                }
                else
                {
                    <div>
                        Bu Sayfada Personeller ile ilgili işlemler Yapılmaktadır
                    </div>
                }

            </div>
            <div class="col-2 offset-1">
                <a asp-area="Admin" asp-controller="Personel" asp-action="AddPersonel" class="btn btn-primary"> Personel Ekle</a>
            </div>
        </div>


    </div>



    @if (Model.Count>0)
    {


        <div class="card mb-4">
            <div class="card-header d-flex ">
                <div class="">
                    <img src="~/img/MPSIcon.png" alt="..." />
                </div>

            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            @* <th>İş Yeri</th> *@
                            @*          <th>Scil No</th>*@
                            <th>TC Kimlik </th>
                            <th>Adı</th>
                            <th>Soy Adı</th>
                            <th>İşi</th>
                            @*    <th>Telefon</th>
                            <th>Cinsiyet</th>
                            <th>Doğum Tarihi</th>
                            <th>İşe Giriş Tarihi</th> *@
                            @*<th>Genel</th>
                            <th>Sağlık</th>
                            <th>Eğitimi Veren 1</th>
                            <th>Eğitimi Veren 2</th> 
                            <th>Genel Puan</th> *@
                            @* <th>Teknik Puan</th> *@
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.TcNumber</td>
                                <td>@item.Name</td>
                                <td>@item.LastName</td>
                                <td>@item.branch.BranchName</td>

                                <td>
                                    <a class="btn btn-primary" asp-action="" asp-controller="Personel" asp-area="Admin">Güncelle</a>
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-route-PersonelId="@item.Id" asp-action="AdminPersonelDelete" asp-controller="Personel" asp-area="Admin">Sil</a>

                                </td>
                            </tr>
                        }


                    </tbody>

                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Office</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>


    }
    else
    {
        <div class="alert alert-danger">
            <h2>
                Henüz bir Tersane Eklenmemiştir
            </h2>
        </div>
    }

</div>



<script>
                 
    var messageBoxColor='@TempData["MessageColor"]';
    console.log(messageBoxColor);
     var d=document.getElementById("MessageBox");
d.classList.add(messageBoxColor);
</script>